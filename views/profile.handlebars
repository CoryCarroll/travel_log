<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>view history:</h3>

    <form class="form new-history-form">
      <div class="form-group">
        <label for="destination">Destination:</label>
        <input class="form-input" type="text" id="destination" name="destination" />
      </div>
      <div class="form-group">
        <label for="budget">Budget:</label>
        <input class="form-input" type="number" id="budget" name="budget" />
      </div>
      <div class="form-group">
        <label for="landmarks">Landmarks:</label>
        <textarea class="form-input" id="landmarks" name="landmarks"></textarea>
      </div>
            <div class="form-group">
        <label for="duration">Duration:</label>
        <input class="form-input" type="text" id="duration" name="duration" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if history.length}}
  <div class="col-md-6 history-list">
    <h3>Past vacations:</h3>

    {{#each history as |history|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/history/{{history.id}}">{{history.destination}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{history.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
